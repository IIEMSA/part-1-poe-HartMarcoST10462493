@model EventEasePart2.Models.Booking

@{
    ViewBag.Title = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @(Model.BookingDate?.ToString("yyyy-MM-dd") ?? "N/A")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventId)
        </dt>
        <dd class="col-sm-10">
            @Model.EventId
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueId)
        </dt>
        <dd class="col-sm-10">
            @Model.VenueId
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.BookingId)

        <input type="submit" value="Delete" class="btn btn-danger" />
        @: |
        @Html.ActionLink("Back to List", "Index")
    }

</div>
