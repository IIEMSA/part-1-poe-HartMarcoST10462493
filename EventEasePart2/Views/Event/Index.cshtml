@model IEnumerable<EventEasePart2.Models.Event>

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Description</th>
            <th>Venue</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@(item.EventDate.HasValue ? item.EventDate.Value.ToShortDateString() : "")</td>
                <td>@item.Description</td>
                <td>@(item.Venue != null ? item.Venue.VenueName : "No Venue")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EventId }, new { @class = "btn btn-sm btn-warning me-1" })
                    @Html.ActionLink("Details", "Details", new { id = item.EventId }, new { @class = "btn btn-sm btn-info me-1 text-white" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.EventId }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
