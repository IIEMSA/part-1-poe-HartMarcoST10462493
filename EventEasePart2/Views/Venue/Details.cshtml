@model EventEasePart2.Models.Venue
@{
    ViewBag.Title = "Venue Details";
}
<h2>Venue Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.VenueName</h4>
        <h5 class="card-subtitle mb-2 text-muted">@Model.Location</h5>
        <p class="card-text">Capacity: @Model.Capacity</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Venue Image" class="img-fluid" />
        }

        <div class="mt-3">
            @Html.ActionLink("Edit", "Edit", new { id = Model.VenueId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
