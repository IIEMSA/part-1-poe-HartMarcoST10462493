@model EventEasePart2.Models.Event
@{
    ViewBag.Title = "Delete Event";
}

<h2>Delete Event</h2>

<h4>Are you sure you want to delete this event?</h4>
<hr />

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.EventName</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Date</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.EventDate?.ToShortDateString()</p>

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Venue</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.Venue?.VenueName</p>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EventId)

    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}

@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger" style="margin-top:15px;">
        @TempData["DeleteError"]
    </div>
}
