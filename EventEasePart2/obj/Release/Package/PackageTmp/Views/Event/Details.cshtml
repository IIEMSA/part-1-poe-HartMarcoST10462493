@model EventEasePart2.Models.Event
@{
    ViewBag.Title = "Event Details";
}

<h2>Event Details</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.EventName</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Date</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.EventDate?.ToShortDateString()</p>

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Description</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.Description</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Venue</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.Venue?.VenueName</p>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EventId }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
