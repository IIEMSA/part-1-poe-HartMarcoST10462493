@model EventEasePart2.Models.Venue
@{
    ViewBag.Title = "Create Venue";
}
<h2>Create Venue</h2>

@using (Html.BeginForm("Create", "Venue", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.VenueName)
            @Html.TextBoxFor(m => m.VenueName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Location)
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Capacity)
            @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", type = "number" })
        </div>

        <div class="form-group">
            <label for="ImageFile">Venue Image</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Create</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    </div>
}
